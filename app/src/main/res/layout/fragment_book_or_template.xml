<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.common.BookOrTemplateFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBookOrTemplate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:fontFamily="@font/splinesansmedium"
            android:text="Создать"
            android:textSize="22sp">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/buttonAddressBook"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="208dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/splinesansmedium"
        android:text="Адресная книга"
        android:textSize="20dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/toolbarBookOrTemplate"
        app:layout_constraintTop_toBottomOf="@+id/toolbarBookOrTemplate"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/buttonTemplate"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Шаблон"
        android:fontFamily="@font/splinesansmedium"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/buttonAddressBook"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/buttonAddressBook"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddressBook"
        app:cornerRadius="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>