<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.common.profile.ProfileFragment">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:openDrawer="start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profileToolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/splinesansmedium"
                    android:text="@string/navigation_profile"
                    android:textColor="@color/white"
                    android:textSize="22sp">

                </TextView>
            </androidx.appcompat.widget.Toolbar>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_username"
                android:layout_width="330dp"
                android:layout_height="58dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/splinesansmedium"
                android:inputType="text"
                android:textColorHint="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2">

                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/splinesansmedium"
                    android:inputType="text"
                    android:text="@string/username_example" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_mail"
                android:layout_width="330dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/splinesansmedium"
                android:inputType="text"
                android:textColorHint="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/layout_username"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/layout_username"
                app:layout_constraintTop_toBottomOf="@+id/layout_username">

                <EditText
                    android:id="@+id/emailEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/splinesansmedium"
                    android:inputType="text"
                    android:text="@string/email_example" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_phone"
                android:layout_width="330dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/splinesansmedium"
                android:inputType="text"
                android:textColorHint="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/layout_mail"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/layout_mail"
                app:layout_constraintTop_toBottomOf="@+id/layout_mail">

                <EditText
                    android:id="@+id/phoneEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/splinesansmedium"
                    android:inputType="text"
                    android:text="@string/phone_example" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_password"
                android:layout_width="330dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/splinesansmedium"
                android:inputType="text"
                android:textColorHint="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/layout_phone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/layout_phone"
                app:layout_constraintTop_toBottomOf="@+id/layout_phone">

                <EditText
                    android:id="@+id/passwordEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/splinesansmedium"
                    android:inputType="text"
                    android:text="@string/password_example" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateButton"
                android:layout_width="163dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/splinesansmedium"
                android:text="Изменить данные"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:layout_constraintStart_toStartOf="@+id/layout_password"
                app:layout_constraintTop_toBottomOf="@+id/layout_password" />

            <Button
                android:id="@+id/logOutButton"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/splinesansmedium"
                android:text="@string/log_out_button"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/layout_password"
                app:layout_constraintTop_toBottomOf="@+id/layout_password" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileToolBar"
                tools:src="@drawable/avatar" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>